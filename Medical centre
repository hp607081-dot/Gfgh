const medicineData = [
  { id: 1, name: "Paracetamol", price: "₹20" },
  { id: 2, name: "Ibuprofen", price: "₹35" },
  { id: 3, name: "Amoxicillin", price: "₹50" },
];

const container = document.getElementById("medicines");

medicineData.forEach(med => {
  const card = document.createElement("div");
  card.className = "medicine-card";
  card.innerHTML = `
    <h3>${med.name}</h3>
    <p>Price: ${med.price}</p>
    <button onclick="addToCart('${med.name}')">Add to Cart</button>
  `;
  container.appendChild(card);
});

function addToCart(itemName) {
  alert(`${itemName} added to cart!`);
}
